{
  "name": "exoress-boiler-plate",
  "version": "1.0.0",
  "description": "Express App bioler-plate",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "format": "prettier --config .prettierrc ./**/*.js --write",
    "lint": "eslint --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
